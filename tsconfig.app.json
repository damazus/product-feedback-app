{
   "extends": "@vue/tsconfig/tsconfig.web.json",
   "include": [
      "env.d.ts",
      "src/**/*",
      "src/**/*.vue",
      "src/**/*.json"
   ],
   "exclude": [
      "src/**/__tests__/*"
   ],
   "compilerOptions": {
      "composite": true,
      "baseUrl": ".",
      "paths": {
         "@/*": [
            "./src/*"
         ]
      },
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "lib": ["esnext", "dom"]
   }
}
